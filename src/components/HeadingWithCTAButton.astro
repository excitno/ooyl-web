---
interface Props {
    header: string;
    paragraph: string;
    sectionClass?: string;
    headerClass?: string;
    paragraphClass?: string;
    buttonText?: string;
    buttonLink?: string;
    buttonClass?: string;
}

const { header, paragraph, buttonText, buttonLink } = Astro.props;
let {sectionClass, headerClass, paragraphClass, buttonClass} = Astro.props;

if (sectionClass === undefined) {
    sectionClass = "bg-red-100 dark:bg-gray-900 border-b border-gray-300 dark:border-gray-800"
}
if (headerClass === undefined) {
    headerClass = "mb-4 text-4xl tracking-tight font-extrabold leading-tight text-gray-900 dark:text-white"
}
if (paragraphClass === undefined) {
    paragraphClass = "mb-6 font-light text-gray-500 dark:text-gray-400 md:text-lg"
}
if (buttonClass === undefined) {
    buttonClass = "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800"
}
---


<section class={sectionClass}>
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
            <h2 class={headerClass}>{header}</h2>
            <p class={paragraphClass}>{paragraph}</p>
            {buttonLink ? <a href={buttonLink} target="_parent" class={buttonClass} title={buttonText}>{buttonText}</a> : ''}
        </div>
    </div>
</section>
---
import HeadBase from "../components/HeadBase.astro";

interface Props {
    title: string;
    language: string;
}

const { title, language } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <HeadBase title={title} description={title} favicon="/favicon.svg" />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    html {
        font-family: Arial, Helvetica, sans-serif;
        background-color: rgb(var(--accent-dark));
    }
    body {
        background-color: rgb(var(--accent-gradient));
    }
</style>
